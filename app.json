{
  "id": "se.emilohman.plejd",
  "version": "1.0.1",
  "compatibility": ">=2.1.2",
  "sdk": 2,
  "brandColor": "#48c5d6",
  "name": {
    "en": "Plejd"
  },
  "description": {
    "en": "Adds support for Plejd devices."
  },
  "tags": {
    "en": [
      "plejd, light, bluetooth, BLE, dimmer"
    ]
  },
  "category": [
    "lights"
  ],
  "permissions": [
    "homey:wireless:ble"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Emil Öhman",
    "email": "emilohman@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Emil Öhman",
        "email": "emilohman@gmail.com"
      }
    ]
  },
  "drivers": [
    {
      "id": "plejd",
      "name": {
        "en": "Plejd"
      },
      "class": "light",
      "capabilities": [
        "dim",
        "onoff"
      ],
      "images": {
        "large": "/drivers/plejd/assets/images/large.png",
        "small": "/drivers/plejd/assets/images/small.png"
      },
      "pair": [
        {
          "id": "login",
          "template": "login_credentials",
          "options": {
            "logo": "../../../assets/images/large.png"
          }
        },
        {
          "id": "site",
          "navigation": {
            "prev": "login"
          }
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "prev": "site",
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ]
}